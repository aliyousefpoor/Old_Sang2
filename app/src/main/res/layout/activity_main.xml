<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_layout"
            android:weightSum="1">

            <include layout="@layout/actionbar_layout" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context="com.example.ali.sang.MainActivity"
            android:layout_gravity="center"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/moghadame"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/folder"
                    android:drawablePadding="0dp"
                    android:minHeight="80dp"
                    android:minWidth="250dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:paddingTop="-5dp"
                    android:text="مقدمه"
                    android:textColor="@android:color/white"
                    fbutton:cornerRadius="25dp"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="6dp"
                    android:background="@drawable/shape"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center">




                <Button
                android:id="@+id/contact"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:drawableLeft="@drawable/contact"
                android:drawablePadding="0dp"
                android:minHeight="80dp"
                android:minWidth="250dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="-5dp"
                android:text="ارتباط با ما"
                android:textColor="@android:color/white"
                fbutton:cornerRadius="25dp"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="6dp"
                android:background="@drawable/shape"
                />


                <Button
                    android:id="@+id/sangha"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/folder"
                    android:drawablePadding="0dp"
                    android:minHeight="80dp"
                    android:minWidth="250dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:paddingTop="-5dp"
                    android:text="سنگ ها"
                    android:textColor="@android:color/white"
                    fbutton:cornerRadius="25dp"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="6dp"
                    android:background="@drawable/shape"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/exit"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:drawableLeft="@drawable/exit"
                    android:drawablePadding="0dp"
                    android:minHeight="80dp"
                    android:minWidth="250dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:paddingTop="-5dp"
                    android:text="خروج"
                    android:textColor="@android:color/white"
                    fbutton:cornerRadius="25dp"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="6dp"
                    android:background="@drawable/shape"
                    />




            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>